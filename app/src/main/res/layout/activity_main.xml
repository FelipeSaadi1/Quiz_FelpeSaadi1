<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="#C4F2F3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="461dp"
        android:layout_height="419dp"
        app:layout_constraintBottom_toTopOf="@+id/BotaoEnviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/quizimagecerto" />

    <Button
        android:id="@+id/BotaoEnviar"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
        android:layout_width="250dp"
        android:layout_height="91dp"
        android:backgroundTint="#74D0F4"
        android:text="INICIAR QUIZ"
        android:textSize="25dp"
        app:icon="@android:drawable/ic_menu_send"
        app:iconSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView11" />

    <TextView
        android:id="@+id/textFrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clique no botÃ£o para gerar uma frase"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/BotaoEnviar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/botaoNovaFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Frase"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textFrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
